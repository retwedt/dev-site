@import "./images";
@import "./navbar";
@import "./projects";
@import "./contact-form";


/***** DEFAULT SETTINGS *****/

*, html, body
  box-sizing border-box
  margin 0
  padding 0

html, body
  width 100%
  height 100%
	font-family serif
	color #222

/***** SCREEN READERS *****/

.screen-reader
	position absolute
	left -10000px
	top auto
	width 1px
	height 1px
	overflow hidden


/***** PAGE SKELETON *****/

/* main minimum height of content the full height of the page */
.main-content
	background-color #D29B8C
	min-height calc(100% - 102px)
	width 100%
	.content-wrap
		background-color #DDCBC6
		padding 8px 16px
		max-width 864px
		margin auto
		opacity 1
		transition opacity 0.2s ease-out
	.content-wrap.fade-out
		opacity 0
		transition opacity 0.2s ease-out

#copyright
	width 100%
	font-size 16px
	color #bcbcbc
	text-align center
	padding 6px 0


/***** MEDIA QUERIES *****/

// // Add horizontal space around containers on phone screens
@media screen and (min-width: 584px)
	.main-content
		background-color #7A3AA2
		.content-wrap
			background-color #9574A9

@media screen and (min-width: 864px)
	.main-content
		background-color #A23A7E
		.content-wrap
			background-color #B0719A
			padding 8px

