h1
  padding 8px

.project-filters
  width 100%
  padding 12px
  display flex
  flex-flow row nowrap
  justify-content space-around

  .filter
    flex 0 10%
    padding 12px
    font-size 12px
    text-align center
    align-content center
    border-radius 6px
    transition all 0.2s ease-out
    border 1px solid orange
    &:hover
      cursor pointer
      transition all 0.2s ease-out
      background #9DC28D

.projects-wrap
  width 100%
  padding 12px

  .project-card
    width 100%
    height 320px
    padding 8px
    margin-top 8px
    border-radius 20px
    display flex
    flex-flow column nowrap
    position relative
    transition all 0.2s ease-out
    border 1px solid #bcbcbc

    &:nth-child(1)
      margin-top 0

    &:hover
      cursor pointer
      transition all 0.2s ease-out
      background #9DC28D

    .project-img
      flex 2
      display flex
      align-items center
      justify-content center
      height 100%
      border-radius 12px 12px 0 0
      overflow hidden
      position relative
      background-size cover
      background-repeat no-repeat
      background-position center
      border 1px solid red

      img
        width 100%
        box-shadow 1px 1px 2px #bcbcbc

    .project-content
      flex 1
      align-content center
      padding 16px
      height 100%
      border-radius 0 0 12px 12px
      overflow hidden
      text-overflow ellipsis
      white-space normal
      border 1px solid green

      h1,
      p
        width 100%
        padding 4px


/***** MEDIA QUERIES *****/

@media screen and (min-width: 584px)
  .projects-wrap
    padding 12px

    .project-card
      padding 8px
      border-radius 20px
      flex-flow row nowrap
      margin-top 24px

      .project-img
        flex 2
        display flex
        border-radius 12px 0 0 12px
        height 100%

      .project-content
        flex 1
        align-content center
        padding 16px
        height 100%
        border-radius 0 12px 12px 0

