/* DEFAULT SETTINGS */

html, body
  width 100%
  height 100%
  margin 0
  padding 0
  box-sizing border-box
	font-family serif
	color #222

// Screen Readers
.screen-reader
	position absolute
	left -10000px
	top auto
	width 1px
	height 1px
	overflow hidden


/* PAGE SKELETON */

/* main minimum height of content the full height of the page */
.main
	min-height calc(100% - 158px)

#content
	background-color #fff
	padding 10px

#copyright
	position absolute
	bottom 0
	width 100%
	font-size 16px
	color #3B473D
	text-align center
	padding 10px 0

/* fake link style for home page */
#home-link
	color #8A8E82
	text-decoration underline

/* MEDIA QUERIES */
@media (max-width: $screen-sm-min)
	// Add horizontal space around containers on phone screens
	.container
		padding-left 20px
		padding-right 20px
